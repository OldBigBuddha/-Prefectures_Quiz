<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/counter"
        android:text="第   問"
        android:textSize="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/prefecturesName"
        android:text=""
        android:textSize="50dp"
        android:padding="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>

    <GridLayout
        android:columnCount="2"
        android:rowCount="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_gravity="center_horizontal">

        <FrameLayout>
        <TextView
            android:layout_column="0"
            android:layout_row="0"
            android:id="@+id/btAnswer_1"
            android:text=""
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="#2fd2a6"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:layout_height="90dp"
            android:layout_width="150dp"
            android:clickable="true"/>

            <ImageView
                android:id="@+id/check_TF_1"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:layout_marginTop="11dp"
                android:layout_width="150dp"
                android:layout_height="100dp" />
        </FrameLayout>
        <FrameLayout>
        <TextView
            android:layout_column="1"
            android:layout_row="0"
            android:id="@+id/btAnswer_2"
            android:text=""
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="#2fd2a6"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:layout_height="90dp"
            android:layout_width="150dp"
            android:clickable="true"/>
            <ImageView
                android:id="@+id/check_TF_2"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:layout_marginTop="11dp"
                android:layout_width="120dp"
                android:layout_height="100dp" />
        </FrameLayout>
        <FrameLayout>
        <TextView
            android:layout_column="0"
            android:layout_row="1"
            android:id="@+id/btAnswer_3"
            android:text=""
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="#2fd2a6"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:layout_height="90dp"
            android:layout_width="150dp"
            android:clickable="true"/>
            <ImageView
                android:id="@+id/check_TF_3"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:layout_marginTop="11dp"
                android:layout_width="120dp"
                android:layout_height="100dp" />
        </FrameLayout>
        <FrameLayout>
        <TextView
            android:layout_column="1"
            android:layout_row="1"
            android:id="@+id/btAnswer_4"
            android:text=""
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="#2fd2a6"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:layout_height="90dp"
            android:layout_width="150dp"
            android:clickable="true"/>
            <ImageView
                android:id="@+id/check_TF_4"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:layout_marginTop="11dp"
                android:layout_width="120dp"
                android:layout_height="100dp" />
        </FrameLayout>

    </GridLayout>

</LinearLayout>